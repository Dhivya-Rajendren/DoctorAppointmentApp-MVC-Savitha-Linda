
@model IEnumerable<DoctorAppointmentApp_MVC.Models.Doctor> //setting the type of the view

<p class="alert alert-warning mt-4 p-2">Doctor Details</p>

<table class="table table-bordered w-25">

    <tr>
        <th>Doctor Name</th>
        <th>Specialized In</th>
               <th>Action</th>
    </tr>

    @foreach (var item in Model)// we are getting the value from the type
    {
        <tr>
            <td>@item.DoctorName</td>
            <td>@item.Specialization</td>
          <td><a asp-action="GetDoctor" asp-route-doctorId=@item.DoctorId class="btn btn-warning" >Details</a></td>
</tr>
    }
</table>
