@model DoctorAppointmentApp_MVC.Models.Appointment


<form method="post" asp-action="MakeAppointment">
    <div class="w-25">
    <div class="form-group ">
    <input  class="form-control m-2" id="name" asp-for=PatientId placeholder="Enter Patient ID">
  </div>
  <div class="form-group">
    <input class="form-control m-2" id="email" asp-for=DoctorId placeholder="Enter Doctor ID">
  </div>
   <div class="form-group">
    <input class="form-control m-2" id="Contact" asp-for=ReasonForAppointment placeholder="Enter Reason For Visit">
  </div>
   <div class="form-group">
    <input  class="form-control m-2" id="history" asp-for=AppointmentDateTime >
  </div>
  <button type="submit" class="btn btn-primary m-2">Submit</button>
    
  </div>

</form>